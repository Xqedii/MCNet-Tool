{
  "name": "mcnet-tool",
  "version": "1.0.0",
  "main": "main.js",
  "description": "Server ",
  "author": "Xqedii",
  "license": "ISC",
  "scripts": {
    "build:css": "tailwindcss -i ./style.css -o ./output.css --minify",
    "watch:css": "tailwindcss -i ./style.css -o ./output.css --watch",
    "dev": "npm-run-all --parallel watch:css start:electron",
    "start:electron": "electron .",
    "build": "electron-builder",
    "start": "npm run dev"
  },
  "build": {
    "appId": "com.xqedii.mcnet",
    "productName": "MCNet Tool",
    "icon": "icons/icon.png",
    "copyright": "Copyright Â© 2025 Xqedii",
    "asar": true,
    "compression": "maximum",
    "files": [
      "main.js",
      "index.html",
      "output.css",
      "preload.js",
      "package.json",
      "icons/**/*",
      "node_modules/axios/**/*",
      "node_modules/cheerio/**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "removeDefaultUninstallWelcomePage": true,
      "displayLanguageSelector": false,
      "artifactName": "${productName}.${ext}"
    }
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.3",
    "axios": "^1.8.4",
    "cheerio": "^1.0.0",
    "node-fetch": "^3.3.2"
  },
  "keywords": []
}
